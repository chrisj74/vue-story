body {
  min-height: 100vh;
  min-height: calc(var(--vh, 1vh) * 100);
  .fullscreen {
    max-height: 100vh;
    max-height: calc(var(--vh, 1vh) * 100);
  }
}

.tuc-watermark {
  position: absolute;
  bottom: 5px;
  right: 5px;
  z-index: 101;
  pointer-events: none;
  text-align: right;
  .brand-link {
    font-size: .5em;
    color: #ccc;
    margin-top: -10px;
  }
}

a {
  color: $primary;
  &:visited {
    color: $primary;
  }
}

.q-drawer-container {
  a, a:visited {
    color: #0c0c0c;
  }
}
#login
  .mid-bg
    background $primary
    height 50vh
    position fixed
    top 0
    left 0
    width 100%

  .login-card
    padding 50px
    width 40%
    margin 0 auto
    position fixed
    top 50%
    transform translate(-50%, -50%)
    left 50%

    @media (max-width: 400px)
      padding 20px
      width 90%

    @media (max-width: 1000px)
      width 80%

    .login-title {
      color rgba(0, 0, 0, .5)
      font-weight bold
      text-align center
      margin-bottom 40px;

        h5 {
          margin-bottom 5px
        }
    }

.profile {
  margin-top: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  a {
    text-decoration: none;
    color: #000;
  }
  .profile-avatar {
    display: inline-block;
    width: 150px;
    max-width: 100%;
    border-radius: 50%;
    border: transparent 5px solid;
    box-sizing: border-box;
    &.profile-active {
      box-shadow: 0 1px 5px rgba(0,0,0,0.2), 0 2px 2px rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12);
      border: solid 5px $primary;
    }
    .profile-img {
      border-radius: 50%;
      max-width: 100%;
      height: 140px;
      background-position: center center;
      background-size: cover;
    }
    .profile-initials {
      width: 150px;
      max-width: 100%;
      height: 140px;
      display: flex;
      border-radius: 50%;
      align-items: center;
      justify-content: center;
      font-size: 4em;
      border: none;
      background-color: #ddd;
    }
  }
  .profile-label {
    text-align: center;
    margin-top: 5px;
  }
}

.profiles-sm {
  .profile {
    &.profile-all {
      .profile-avatar {
        width: 80px;
      }
    }
    .profile-avatar {
      width: 75px;
      .profile-initials {
        width: 75px;
        height: 65px;
        font-size: 2.5em;
      }
      .profile-img {
        height: 65px;
      }
    }
  }
}

.profile-xs {
  display: inline-block;
  .profile {
    margin-top: 0;
    &.profile-all {
      .profile-avatar {
        width: 50px;
      }
    }
    .profile-avatar {
      width: 50px;
      border: transparent 2px solid;
      &.profile-active {
        border: solid 2px $secondary;
      }
      .profile-initials {
        width: 50px;
        height: 46px;
        font-size: 1.5em;
      }
      .profile-img {
        height: 46px;
      }
    }
  }
}

.profiles-wrapper {
  margin-top: 10px;
  .profile {
    margin-right: 10px;
    margin-bottom: 20px;
    cursor: pointer;
    position: relative;
    .profile-avatar {
      position: relative;
      .avatar-img {
        position: relative;
        z-index: 1;
      }
      .profile-edit {
        position: absolute;
        top: 0;
        bottom: 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 5em;
        z-index: 2;
        border-radius: 50%;
        background-color: rgba(0,0,0,0.5);
        color: #fff;
      }
    }
  }
}
